@model PIC_MVC.Models.LoginUser


@{
    ViewBag.Title = "Login";
}

<head>




    <meta charset="UTF-8">

    <title>PIC</title>


    <link rel="stylesheet" href="~/Content/Login/reset.css">
    <link rel='stylesheet prefetch' href='http://fonts.googleapis.com/css?family=Roboto:400,100,400italic,700italic,700'>

    <link rel="stylesheet" href="~/Content/Login/style.css">

    @section Scripts{
        @Scripts.Render("~/bundles/jqueryval")
    }


</head>


<body>

    <br />
    <br />


    <div class='form aniamted bounceIn'>

        <div class='login'>
            <div class="logo">
                <img src="@Url.Content("~/Content/Login/Imagem/logov.png")" alt="Visiontec PIC " title="Visiontec PIC" />
            </div>
            <h2>Insira seu Login</h2>
            <form method="post">

                @Html.ValidationSummary(true)

                @Html.TextBoxFor(model => model.User, new { @placeholder = "Usuário" })
                @Html.ValidationMessageFor(model => model.User)

                @Html.TextBoxFor(model => model.Password, new { @placeholder = "Senha", @Type = "password" })
                @Html.ValidationMessageFor(model => model.Password)

                <button>ENTRAR</button>

            </form>
        </div> 

    </div>
    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    <script src="js/index.js"></script>


</body>
